user test;

events {
	worker_connections 1024;
}
http {
server {
			listen 5000 ;
			listen [::]:5000 ;
			server_name _;
			root /var/www/phpmyadmin/;
			index index.php;
			location / {
            try_files $uri $uri/ =404;
			}
			location /wordpress {
				return 307  http://192.168.99.139:5050/;
			}
			location /phpmyadmin/ {
				proxy_set_header X-Forwarded-Proto https;
				proxy_buffers 16 4k;
				proxy_buffer_size 2k;
				proxy_pass http://192.168.99.138:5000/;
			}
}
}
