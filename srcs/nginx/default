server {
			listen 80;
			listen [::]80;
			server_name localhost www.localhost;
			return 301 https://$server_name$request_uri;
}

server {
			listen 443 ssl ;
			listen [::]:443 ssl ;

			ssl on;
			ssl_certificate /etc/ssl/certs/localhost.crt;
			ssl_certificate_key /etc/ssl/certs/localhost.key;

			root /var/www/html;

			index index.html index.htm

			server_name localhost www.localhost;
}
