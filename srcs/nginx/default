user test;

events {
	worker_connections 1024;
}
http {

server {
			listen 80 default_server;
			listen [::]:80 default_server;
			return 301 https://$host$request_uri;
}
server {
			listen 443 ssl ;
			listen [::]:443 ssl ;
			server_name _;

			ssl_certificate /etc/ssl/nginx-selfsigned.crt;
			ssl_certificate_key /etc/ssl/nginx-selfsigned.key;
			root /www;	
			index index.html;
			location / {
            try_files $uri $uri/ =404;
			}

}
}
